<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/lobby_team_photo"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/team_default" />

        <TextView
            android:id="@+id/lobby_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lobby_team_photo"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/lobby_team_photo"
            android:gravity="center"
            android:text="蓝翔足球俱乐部"
            android:textColor="#576b95"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lobby_team_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lobby_team_name"
            android:layout_alignBottom="@id/lobby_team_name"
            android:text="山东  济南"
            android:layout_marginLeft="10dp"
            android:textColor="#6e6e6e"
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/lobby_team_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lobby_team_name"
            android:layout_marginTop="5dip"
            android:layout_alignLeft="@id/lobby_team_name"
            android:text="球队目前每周固定参加XX联赛，需要一名门将和一名强力中锋"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lobby_team_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lobby_team_city"
            android:layout_alignBottom="@id/lobby_team_city"
            android:layout_alignParentRight="true"
            android:text="招人"
            android:textColor="#6e6e6e"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/lobby_team_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lobby_team_name"
            android:layout_below="@id/lobby_team_text"
            android:layout_marginTop="5dp"
            android:text="4月21日"
            android:textColor="#9e9e9e"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lobby_team_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/lobby_team_date"
            android:layout_alignTop="@id/lobby_team_date"
            android:layout_alignBottom="@id/lobby_team_date"
            android:text="删除"
            android:textColor="#576b95"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lobby_team_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lobby_team_date"
            android:layout_alignBottom="@id/lobby_team_date"
            android:text="回复"
            android:textColor="#576b95"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lobby_team_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="#f0f0f0"
        android:orientation="vertical"
        android:padding="10dip" >
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="10dp"
        android:background="#dedede" />

</LinearLayout>