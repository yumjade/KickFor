<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/pre_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_style" >

            <ImageView
                android:id="@+id/pre_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/select_unselected_3"
                android:padding="15dip"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/pre_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/pre_back"
                android:text="比赛预告"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_6"
            android:paddingBottom="10dip"
            android:paddingTop="20dip" >

            <TextView
                android:id="@+id/VS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="20dip"
                android:text="VS"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/pre_my_team_image"
                android:layout_width="120dip"
                android:layout_height="60dip"
                android:layout_toLeftOf="@id/VS"
                android:src="@drawable/team_default" />

            <TextView
                android:id="@+id/pre_my_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pre_my_team_image"
                android:layout_alignRight="@id/pre_my_team_image"
                android:layout_below="@id/pre_my_team_image"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/pre_against_team_image"
                android:layout_width="120dip"
                android:layout_height="50dip"
                android:layout_alignBottom="@id/pre_my_team_image"
                android:layout_alignTop="@id/pre_my_team_image"
                android:layout_toRightOf="@id/VS"
                android:src="@drawable/team_default" />

            <TextView
                android:id="@+id/pre_against_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/pre_my_team_name"
                android:layout_alignLeft="@id/pre_against_team_image"
                android:layout_alignRight="@id/pre_against_team_image"
                android:layout_alignTop="@id/pre_my_team_name"
                android:gravity="center"
                android:text=""
                android:textColor="#333333"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_6" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/rect_6"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@+id/bisairiqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="1dp"
                    android:text="比赛日期："
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bisairiqi"
                    android:layout_alignTop="@id/bisairiqi"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/bisairiqi"
                    android:paddingBottom="1dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bisaishijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/bisairiqi"
                    android:layout_below="@id/bisairiqi"
                    android:paddingBottom="1dp"
                    android:text="比赛时间："
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bisaishijian"
                    android:layout_alignTop="@id/bisaishijian"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/bisaishijian"
                    android:paddingBottom="1dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bisaididian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/bisairiqi"
                    android:layout_below="@id/bisaishijian"
                    android:paddingBottom="1dp"
                    android:text="比赛地点："
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bisaididian"
                    android:layout_alignTop="@id/bisaididian"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/bisaididian"
                    android:paddingBottom="1dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/bisaixingzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/bisairiqi"
                    android:layout_below="@id/bisaididian"
                    android:paddingBottom="1dp"
                    android:text="比赛性质："
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bisaixingzhi"
                    android:layout_alignTop="@id/bisaixingzhi"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@id/bisaixingzhi"
                    android:paddingBottom="1dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_6"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/zuijinwuchang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="最近五场"
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_history_whole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zuijinwuchang"
                    android:layout_alignTop="@id/zuijinwuchang"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/zuijinwuchang"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pre_history_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/zuijinwuchang"
                    android:layout_below="@id/zuijinwuchang"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_history_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/zuijinwuchang"
                    android:layout_below="@id/pre_history_item1"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_history_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/zuijinwuchang"
                    android:layout_below="@id/pre_history_item2"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_history_item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/zuijinwuchang"
                    android:layout_below="@id/pre_history_item3"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_history_item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/zuijinwuchang"
                    android:layout_below="@id/pre_history_item4"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/querencansaiduiyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="确认参赛队员："
                    
                    android:textColor="#6e6e6e"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pre_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/querencansaiduiyuan"
                    android:layout_below="@id/querencansaiduiyuan"
                    android:text=""
                    android:hint="暂无队员报名"
                    android:textColor="#333333"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/pre_ensure_join"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="80dip"
                android:background="@drawable/btn_style_selector"
                android:gravity="center"
                android:text="确认参加"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pre_reedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="80dip"
                android:background="@drawable/btn_style_selector"
                android:gravity="center"
                android:paddingLeft="50dip"
                android:paddingRight="50dip"
                android:text="编辑"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>