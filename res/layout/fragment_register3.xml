<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/register_title3">
	    <ImageView
	        android:id="@+id/register_title_back3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/register_text3"
		    android:layout_toRightOf="@id/register_title_back3"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/yanzhengchenggong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_below="@id/register_title3"
        android:layout_centerHorizontal="true"
        android:text="验证成功！"
        android:textSize="18sp"
        android:textColor="#333333"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yanzhengchenggong"
        android:id="@+id/jiexialaiqing"
        android:text="接下来请完善您的个人信息，以便踢否给您提供更加专业的服务。"
        android:textSize="15sp"
        android:paddingLeft="30dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:paddingRight="30dip"
	    android:gravity="center"
	    android:layout_marginBottom="10dip"
	    android:textColor="#6e6e6e"/>
        <RelativeLayout
	        android:id="@+id/rrr_rrr"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	        android:paddingLeft="10dip"
	        android:background="#ffffff"
	        android:layout_below="@id/jiexialaiqing">
	        <TextView
	            android:id="@+id/xingming"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="姓名"
	            android:textColor="#333333"/>
	        <EditText
	            android:id="@+id/r_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/xingming"
	            android:layout_marginLeft="10dip"
	            android:inputType="text"
	            android:hint="请输入您的真实姓名"
	            android:textColor="#9e9e9e"
	            android:textSize="15sp"
	            android:background="@null"/>
        </RelativeLayout>
    <TextView
        android:id="@+id/r_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rrr_rrr"
        android:paddingLeft="10dip"
	    android:paddingTop="10dip"
	    android:paddingBottom="10dip"
	    android:paddingRight="20dip"
	    android:text="踢否是一个真实专业足球社交网络，建议您使用真实姓名，以便您的队友和俱乐部更容易找到您。"
	    android:textSize="12sp"
	    android:textColor="#9e9e9e"/>
    <TextView
	        android:id="@+id/r_next3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/r_tishi"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
</RelativeLayout>