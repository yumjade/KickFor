<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
        android:id="@+id/find_psd_title1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style">
	    <ImageView
	        android:id="@+id/find_psd_back1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/find_psd_text1"
		    android:layout_toRightOf="@id/find_psd_back1"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="找回密码"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:background="#ffffff"
        android:layout_below="@id/find_psd_title1">
        <TextView
            android:id="@+id/yanzhengma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="验证码"
            android:textColor="#333333"/>
        <TextView
            android:id="@+id/find_psd_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="12秒后重发"
            android:textColor="#6e6e6e"/>
        <EditText
            android:id="@+id/find_psd_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yanzhengma"
            android:layout_toLeftOf="@id/find_psd_re"
            android:layout_marginLeft="10dip"
            android:inputType="phone"
            android:maxLength="4"
            android:hint="短信验证码"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:background="@null"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/yanzhengmayifa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_code"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textColor="#6e6e6e"/>
    <TextView
	        android:id="@+id/find_psd_next1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/yanzhengmayifa"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
    
</RelativeLayout>