<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rl_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/file_show_photo"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/team_default" />

            <TextView
                android:id="@+id/file_show_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/file_show_photo"
                android:layout_toRightOf="@id/file_show_photo"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/file_show_teamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_show_position"
                android:layout_alignLeft="@id/file_show_position"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:textColor="#6e6e6e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/file_show_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/file_show_photo"
                android:layout_below="@id/file_show_teamname"
                android:layout_alignLeft="@id/file_show_teamname"
                android:gravity="center_vertical"
                android:textColor="#6e6e6e"
                android:textSize="12sp" />
        </RelativeLayout>
        
    <LinearLayout
        android:id="@+id/file_show_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dp"
        android:background="#eeeeee"
        android:orientation="vertical" 
        android:paddingBottom="10dip">
            
        
    </LinearLayout>

    

</LinearLayout>
