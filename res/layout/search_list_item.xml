<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<View
	    android:id="@+id/search_line_start"
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="#dedede"/>
	<TextView
	    android:id="@+id/search_type"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="球队"
	    android:textSize="15sp"
	    android:textColor="#333333"
	    android:paddingLeft="10dip"/>
	<View
	    android:id="@+id/search_line_up"
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="#dedede"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dip">
	    <ImageView
		    android:id="@+id/search_photo"
		    android:layout_width="50dip"
		    android:layout_height="50dip"
		    android:src="@drawable/team_default"/>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <TextView 
			    android:id="@+id/search_name" 
			    android:layout_marginLeft="10dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 	
				android:textSize="15sp" 
				android:gravity="center"
				android:textColor="#333333"
				android:text="精神糖"/>
			<TextView 
			    android:id="@+id/search_description" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" 
			    android:layout_marginTop="2dip"
				android:textSize="12sp"
				android:textColor="#333333"
				android:text="北京草根球队，成立于2003年，目前球队有15人,yiayyiyayaya"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>