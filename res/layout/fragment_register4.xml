<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/register_title4">
	    <ImageView
	        android:id="@+id/register_title_back4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/register_text4"
		    android:layout_toRightOf="@id/register_title_back4"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/xuanzechengshi"
        android:layout_below="@id/register_title4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择城市"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="10dip"/>
    <TextView
        android:id="@+id/jiexialai"
        android:layout_below="@id/xuanzechengshi"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接下来请完善您的地理信息，方便您更好的找到周围志同道合的朋友。"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#6e6e6e"
        android:layout_marginBottom="20dip"/>
    <LinearLayout
        android:id="@+id/r_l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jiexialai"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal">
        <EditText
	        android:id="@+id/r_city"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:hint="请选择省市"
	        android:textSize="15sp"
	        android:textColor="#333333"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:paddingTop="12dip"
	        android:paddingBottom="12dip"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/bg_edittext"
	        android:clickable="true"/>
	    <EditText
	        android:id="@+id/r_district"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:hint="全部"
	        android:textColor="#333333"
	        android:textSize="15sp"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:paddingTop="12dip"
	        android:paddingBottom="12dip"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/bg_edittext"
	        android:clickable="true"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tifoushiyige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/r_l4"
        android:layout_alignRight="@id/r_l4"
        android:layout_below="@id/r_l4"
        android:textColor="#9e9e9e"
        android:text="踢否是一个真实专业的足球社交网络，建议您使用真实数据，以便您的队友和俱乐部更容易找到您。"
        android:textSize="12sp"/>
    <TextView
	        android:id="@+id/r_next4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tifoushiyige"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"/>
</RelativeLayout>