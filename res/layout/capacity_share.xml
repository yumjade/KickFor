<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_share"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@null"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/iv_share_photo"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:layout_alignParentLeft="true"
            android:paddingLeft="13dp"
            android:src="@drawable/team_default" />

        <TextView
            android:id="@+id/tv_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_share_photo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/iv_share_photo"
            android:paddingLeft="15dp"
            android:text="昵称：余辛迪"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_share_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_share_name"
            android:layout_below="@id/tv_share_name"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:text="效力于：亚平宁之师队"
            android:textColor="#b4b4b4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_share_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_share_name"
            android:layout_below="@id/tv_share_team"
            android:paddingTop="3dp"
            android:paddingBottom="10dip"
            android:paddingLeft="15dp"
            android:text="位置：中后卫"
            android:textColor="#b4b4b4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_share_number"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dip"
            android:background="@drawable/number_style"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="20"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_my_kickfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="踢否足球战力值"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="35sp" />

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@null"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/tv_share_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="进攻15"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/iv_share_capacity"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/tv_share_attack"
            android:layout_centerInParent="true"
            android:src="@drawable/capacity_share" />
        
        <com.example.kickfor.utils.SexangleView 
            android:id="@+id/iv_share_capacity_new"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/tv_share_attack"
            android:layout_centerInParent="true"/>

        

        <TextView
            android:id="@+id/tv_share_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_share_capacity"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/iv_share_capacity"
            android:layout_marginRight="5dp"
            android:text="力量7"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_share_defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_share_capacity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="防守8"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_share_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_share_capacity"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/iv_share_capacity"
            android:layout_marginRight="5dp"
            android:text="技术9"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_share_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_share_skills"
            android:layout_alignBottom="@+id/tv_share_skills"
            android:layout_toRightOf="@+id/iv_share_capacity"
            android:layout_marginLeft="5dp"
            android:text="速度12"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_share_stamina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_share_power"
            android:layout_alignBottom="@+id/tv_share_power"
            android:layout_alignLeft="@+id/tv_share_speed"
            android:text="体能9"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
   

    <TextView
        android:id="@+id/tv_share_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_gravity="center_horizontal"
        android:text="这是我在踢否平台上由322人评分得出的踢否\n足球战力值，你也快来踢否看看你在大家\n眼中的足球战力是多少吧！"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_share_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="数据截止自：2015/7/21  15:00"
        android:textColor="#b4b4b4"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.2"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/iv_share_qr_code"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_alignParentLeft="true"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/share_qr" />
        
        <ImageView
            android:id="@+id/iv_share_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/iv_share_qr_code"
            android:padding="2dp"
            android:layout_toRightOf="@id/iv_share_qr_code"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_share_kickfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_share_icon"
            android:layout_toRightOf="@+id/iv_share_icon"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="踢否APP"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_share_icon"
            android:layout_toRightOf="@id/iv_share_qr_code"
            android:layout_alignLeft="@id/iv_share_icon"
            android:paddingTop="15dp"
            android:text="在这里开启你全新的足球生涯"
            android:textColor="#9e9e9e"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>