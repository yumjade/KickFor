<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
        android:id="@+id/find_psd_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style">
	    <ImageView
	        android:id="@+id/find_psd_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/find_psd_text"
		    android:layout_toRightOf="@id/find_psd_back"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="找回密码"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/qingshurunin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_psd_title"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:text="请输入您在注册时使用的手机号码，\n踢否会向您发送一条验证信息"
        android:gravity="center"
        android:textColor="#6e6e6e"/>
    <RelativeLayout
        android:id="@+id/re_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:background="#ffffff"
        android:layout_below="@id/qingshurunin">
        <TextView
            android:id="@+id/shoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号"
            android:textColor="#333333"/>
        <EditText
            android:id="@+id/find_psd_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoujihao"
            android:layout_marginLeft="10dip"
            android:inputType="number"
		    android:maxLength="11"
            android:hint="请输入11位手机号"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:background="@null"/>
    </RelativeLayout>
    <TextView
	        android:id="@+id/find_psd_next"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/re_phone"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
    "
</RelativeLayout>