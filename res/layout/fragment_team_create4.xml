<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/teamcreate_title4">
	    <ImageView
	        android:id="@+id/teamcreate_title_back4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/teamcreate_text4"
		    android:layout_toRightOf="@id/teamcreate_title_back4"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册球队"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <TextView
        android:id="@+id/ninshichenjin"
        android:layout_below="@id/teamcreate_title4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dip"
        android:text="您是浸淫业余足球很久的老炮，还是一只年轻\n朝气的球队，确定球队成立的时间"
        android:textSize="14sp"
        android:textColor="#6e6e6e"
        android:layout_marginBottom="20dip"/>
    <RelativeLayout
        android:id="@+id/team_create_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ninshichenjin"
        android:background="@drawable/rect_4"
        android:padding="10dip">
        <TextView
	        android:id="@+id/tv_chenglishijian"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="成立时间"
	        android:textSize="15sp"
	        android:textColor="#333333"
	        android:layout_marginBottom="10dip"/>
        <TextView
	        android:id="@+id/team_create_nian"
	        android:layout_centerInParent="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="年"
	        android:textColor="#333333"
	        android:textSize="15sp"
	        android:layout_marginBottom="10dip"/>
        <TextView
	        android:id="@+id/spinner_year"
	        android:layout_toLeftOf="@id/team_create_nian"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text=""
	        android:gravity="center"
	        android:textColor="#333333"
	        android:background="@null"
	        android:clickable="true"/>
        <TextView
	        android:id="@+id/team_create_ri"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="日"
	        android:textColor="#333333"
	        android:textSize="15sp"/>
        <TextView
	        android:id="@+id/spinner_day"
	        android:layout_toLeftOf="@+id/team_create_ri"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text=""
	        android:textColor="#333333"
	        android:gravity="center"
	        android:background="@null"
	        android:clickable="true"/>
        <TextView
	        android:id="@+id/team_create_yue"
	        android:layout_marginRight="50dip"
	        android:layout_toLeftOf="@id/team_create_ri"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="月"
	        android:gravity="center"
	        android:textColor="#333333"
	        android:textSize="15sp"/>
        <TextView
	        android:id="@+id/spinner_month"
	        android:layout_toLeftOf="@id/team_create_yue"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="15sp"
	        android:textColor="#333333"
	        android:gravity="center"
	        android:background="@null"
	        android:clickable="true"/>
    </RelativeLayout>
   
    <TextView
	        android:id="@+id/team_next4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/team_create_r"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
</RelativeLayout>