<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/show_capacity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/show_capacity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/show_capacity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/show_capacity_back"
            android:text="踢否战力值"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/show_capacity_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="10dp"
            android:src="@drawable/share" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_3"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/show_capacity_photo1"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/team_default" />

        <TextView
            android:id="@+id/show_capacity_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/show_capacity_photo1"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@id/show_capacity_photo1"
            android:paddingTop="8dip"
            android:text="余辛迪"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/show_capacity_team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/show_capacity_photo1"
            android:layout_alignLeft="@id/show_capacity_name1"
            android:paddingBottom="10dip"
            android:text="亚平宁之师队-中后卫"
            android:textColor="#6e6e6e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/show_capacity_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/show_capacity_photo1"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/show_capacity_photo1"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/number_style"
            android:gravity="center"
            android:text="17"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="40dip"
        android:paddingTop="20dip" >

        <ImageView
            android:id="@+id/iv_share_capacity"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/tv_share_attack"
            android:layout_centerInParent="true"
            android:src="@drawable/sexangle" />

        <com.example.kickfor.utils.SexangleView2
            android:id="@+id/iv_share_capacity_new"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/tv_share_attack"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/show_capacity_value1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:text="15"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/show_capacity_value2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/iv_share_capacity"
            android:layout_marginRight="69dp"
            android:text="8"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_share_capacity"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/show_capacity_value2"
            android:paddingTop="60dp"
            android:text="防守"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show_capacity_value3"
            android:layout_alignBottom="@+id/show_capacity_value3"
            android:layout_toLeftOf="@+id/show_capacity_value3"
            android:text="技术"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/show_capacity_value5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="12"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/show_capacity_value3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/show_capacity_value4"
            android:layout_marginBottom="85dp"
            android:layout_toLeftOf="@+id/iv_share_capacity"
            android:text="9"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show_capacity_value4"
            android:layout_alignBottom="@+id/show_capacity_value4"
            android:layout_toLeftOf="@+id/show_capacity_value4"
            android:text="力量"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/show_capacity_value3"
            android:layout_alignBottom="@+id/show_capacity_value3"
            android:layout_toRightOf="@+id/iv_share_capacity"
            android:text="速度"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignTop="@+id/iv_share_capacity"
            android:layout_marginTop="20dp"
            android:text="进攻"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/show_capacity_value6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/show_capacity_value5"
            android:text="9"
            android:textColor="#333333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_capacity_value3"
            android:layout_toRightOf="@+id/iv_share_capacity"
            android:text="体能"
            android:textColor="#333333"
            android:textSize="13sp" />

        
        <TextView
            android:id="@+id/show_capacity_value4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_toLeftOf="@+id/iv_share_capacity"
            android:text="7"
            android:textColor="#333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/show_capacity_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_style_selector_2"
        android:gravity="center"
        android:text="给自己评分"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/show_capacity_number_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:text="已有15人为您评分，点击分享邀请更多好友来为你评分"
        android:textColor="#999999"
        android:textSize="12sp" />

</LinearLayout>