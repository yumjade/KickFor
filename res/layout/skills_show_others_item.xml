<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:orientation="horizontal">
        <TextView
	        android:id="@+id/skills_other_show_count"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:text="12"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:background="@drawable/skills_number"
	        android:textColor="#ffffff"
	        android:textSize="15sp" />
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dip"
		    android:layout_marginRight="15dip">
            <TextView
		        android:id="@+id/skills_other_show_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="牛尾巴过人"
		        android:textColor="#333333"
		        android:textSize="15sp" />
            <TextView
                android:id="@+id/skills_other_show_ensured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证"
                android:layout_marginTop="3dip"
                android:textColor="#9e9e9e"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/skills_other_show_state"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="30dip"
            android:layout_marginRight="15dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/skills_unselected"/>
    </LinearLayout>
    <View 
        android:id="@+id/skills_other_show_line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dip"
        android:background="#f0f0f0"/>
</LinearLayout>
