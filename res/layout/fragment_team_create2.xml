<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/teamcreate_title2">
	    <ImageView
	        android:id="@+id/teamcreate_title_back2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/teamcreate_text2"
		    android:layout_toRightOf="@id/teamcreate_title_back2"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册球队"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <ImageView
        android:id="@+id/iv_team1"
        android:layout_below="@id/teamcreate_title2"
        android:layout_centerHorizontal="true"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginBottom="25dip"
        android:background="@drawable/team_register_image"
        android:clickable="true"
        android:layout_marginTop="25dip"/>
    <EditText
        android:id="@+id/et_newteam"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_team1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入球队名称"
        android:paddingLeft="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:textSize="16sp"
        android:textColor="#9e9e9e"
        android:background="#ffffff"
        android:clickable="true"/>
    <TextView
	        android:id="@+id/team_next2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/et_newteam"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
</RelativeLayout>