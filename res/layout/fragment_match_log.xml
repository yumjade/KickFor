<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style">
	    <ImageView
	        android:id="@+id/match_log_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/match_log_title"
		    android:layout_toRightOf="@id/match_log_back"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="场次纪录"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="10dip"
	    android:background="#f5f5f5">
	    <TextView 
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textColor="#6e6e6e"
	        android:textSize="12sp"
	        android:text="比赛性质"
	        android:gravity="left"/>
	    <TextView 
	        android:id="@+id/match_number"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="#6e6e6e"
	        android:textSize="12sp"
	        android:text="场次"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/match_result"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="#6e6e6e"
	        android:textSize="12sp"
	        android:text="胜/平/负"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/match_total_goal"
	        android:layout_width="0dip"
	        android:layout_weight="1.2"
	        android:layout_height="wrap_content"
	        android:textColor="#6e6e6e"
	        android:textSize="12sp"
	        android:text="总进球数"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/match_total_lost"
	        android:layout_width="0dip"
	        android:layout_weight="1.2"
	        android:layout_height="wrap_content"
	        android:textColor="#6e6e6e"
	        android:textSize="12sp"
	        android:text="总失球数"
	        android:gravity="center"/>
	</LinearLayout>
    <ListView
        android:id="@+id/match_log_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0.5dp"
        android:divider="#ebebeb"
        android:background="@drawable/rect_2"/>
</LinearLayout>  