<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="球队初创篇"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/team_history_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="亚平宁之师是一支成立于2006年的草根队伍"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="10dp"
            android:text="初期发展篇"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/team_history_developing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="初期建队5人开始招兵买马"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="10dp"
            android:text="快速扩张篇"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/team_history_expanding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="经历过百队杯的磨练，我们逐渐成熟，吸引了XX队队长的加盟"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:paddingLeft="10dp"
            android:text="逐渐成熟篇"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/team_history_developed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="10dp"
            android:text="在百事争霸赛后，在业余圈开始小有名气"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/team_history_edit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_style_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="5dp"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/team_history_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/team_history_cancel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style_selector_2"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="5dp"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/team_history_ensure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:background="@drawable/btn_style_selector"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="5dp"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="15dip"
            android:background="#dfdfdf" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:paddingBottom="5dip"
android:paddingLeft="10dp"
            android:paddingTop="5dip"
            android:text="荣誉"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="2"
                android:gravity="left"
                android:maxLength="4"
                android:text="年份"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="3.24"
                android:gravity="left"
                android:padding="3dip"
                android:text="比赛名称"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="3dip"
                android:text="成绩"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/team_history_honor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/team_history_edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/btn_style_selector"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingLeft="35dip"
            android:paddingRight="35dip"
            android:paddingTop="5dip"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <LinearLayout
            android:id="@+id/team_history_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/team_history_cancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_style_selector_2"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="5dp"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/team_history_ensure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:background="@drawable/btn_style_selector"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="5dp"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>