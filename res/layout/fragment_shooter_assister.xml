<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/shooter_assister_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/shooter_assister_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shooter_assister_back"
            android:text="射手榜助攻榜"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shooter_assister_shooter"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_style_13"
                android:padding="10dip"
                android:text="射手榜"
                android:textColor="#6e6e6e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shooter_assister_assister"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn_style_13"
                android:padding="10dip"
                android:text="助攻榜"
                android:textColor="#6e6e6e"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_shooter"
                android:layout_width="0dip"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_style"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tab_assister"
                android:layout_width="0dip"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_style"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ececec"/>

    <ListView
        android:id="@+id/shooter_assister_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:background="@drawable/rect_2" />

</LinearLayout>