<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/team_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/team_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/team_info_back"
            android:text="亚平宁之师"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_6"
        android:paddingBottom="10dip"
        android:paddingLeft="25dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/team_info_image"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/team_default" />

        <TextView
            android:id="@+id/team_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/team_info_image"
            android:layout_alignRight="@id/team_info_image"
            android:layout_below="@id/team_info_image"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="亚平宁之师"
            android:textColor="#333333"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/team_info_image"
            android:layout_alignTop="@id/team_info_image"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/team_info_image" >

            <TextView
                android:id="@+id/team_info_center"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/team_info_chengliyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/team_info_center"
                android:layout_below="@id/team_info_center"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:text="成立于"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/team_info_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/team_info_chengliyu"
                android:layout_alignTop="@id/team_info_chengliyu"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/team_info_chengliyu"
                android:gravity="center"
                android:text="2006"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_info_nian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/team_info_chengliyu"
                android:layout_alignTop="@id/team_info_chengliyu"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/team_info_year"
                android:gravity="center"
                android:text="年		"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/team_info_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/team_info_chengliyu"
                android:layout_alignTop="@id/team_info_chengliyu"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/team_info_nian"
                android:gravity="center"
                android:text="25"
                android:textColor="#333333"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_info_ren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/team_info_chengliyu"
                android:layout_alignTop="@id/team_info_chengliyu"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/team_info_number"
                android:gravity="center"
                android:text="人"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/team_info_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/team_info_center"
                android:layout_alignLeft="@id/team_info_center"
                android:paddingBottom="2dip"
                android:paddingTop="2dip"
                android:text="北京"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_info_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/team_info_city"
                android:layout_alignTop="@id/team_info_city"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/team_info_city"
                android:gravity="center"
                android:text="石景山、西城"
                android:textColor="#333333"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_7"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/team_info_member"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dip"
                android:paddingTop="10dip"
                android:text="球员列表"
                android:textColor="#6e6e6e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/team_info_grade"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dip"
                android:paddingTop="10dip"
                android:text="发展史和成就"
                android:textColor="#6e6e6e"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_team_info_member"
                android:layout_width="0dip"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_style"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tab_team_info_grade"
                android:layout_width="0dip"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/btn_style"
                android:visibility="invisible" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>