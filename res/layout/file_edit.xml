<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/file_edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/file_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/file_edit_back"
            android:text="档案编辑"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rect_14"
            android:clickable="true"
            android:padding="5dip"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_complete_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:paddingBottom="20dip"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_10"
                android:paddingBottom="10dip" >

                <TextView
                    android:id="@+id/tv_edit_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="球队名称"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_edit_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_edit_team_name"
                    android:layout_alignTop="@id/tv_edit_team_name"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"
                    android:layout_toRightOf="@id/tv_edit_team_name"
                    android:background="@drawable/bg_edittext_normal"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_file_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_edit_team_name"
                    android:layout_below="@id/tv_edit_team_name"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="场上位置"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/et_file_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_file_position"
                    android:layout_alignLeft="@id/et_edit_team_name"
                    android:layout_alignRight="@id/et_edit_team_name"
                    android:layout_alignTop="@id/tv_file_position"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/complete_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:background="#f0f0f0" />

            <RelativeLayout
                android:id="@+id/btn_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_10"
                android:paddingBottom="10dip" >

                <TextView
                    android:id="@+id/tv_file_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="目前效力球队"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_switch_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/open_icon"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_switch_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/close_icon"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_join_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_file_service"
                    android:layout_below="@id/tv_file_service"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="加入时间"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/et_join_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_join_time"
                    android:layout_alignTop="@id/tv_join_time"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="15dip"
                    android:layout_toRightOf="@id/tv_join_time"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center_vertical"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_leave_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_file_service"
                    android:layout_below="@id/tv_join_time"
                    android:layout_marginTop="10dip"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:text="离开时间"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/et_leave_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_leave_time"
                    android:layout_alignLeft="@id/et_join_time"
                    android:layout_alignRight="@id/et_join_time"
                    android:layout_toRightOf="@id/tv_leave_time"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/complete_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#f0f0f0"
                android:paddingLeft="20dp"
                android:text="非必填"
                android:textColor="#9e9e9e" />

            <RelativeLayout
                android:id="@+id/btn_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_10"
 >

                <ListView
                    android:id="@+id/lv_match_more"
                    android:layout_width="wrap_content"
                    android:dividerHeight="10dip"
                    android:divider="#f0f0f0"
                    android:layout_height="wrap_content" >
                </ListView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/selected_unselected_8"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="12dip"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/iv_file_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/edit_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_file_add"
                    android:text="新增比赛经历"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/file_edit_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="删除这份档案"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_style_selector_2"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>