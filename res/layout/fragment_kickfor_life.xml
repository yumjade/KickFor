<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/kickfor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/kickfor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/kickfor_back"
            android:text="踢否生涯数据"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_3"
        android:paddingBottom="12dip"
        android:paddingLeft="10dip"
        android:paddingTop="12dip" >

        <ImageView
            android:id="@+id/kickfor_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/team_default" />

        <TextView
            android:id="@+id/kickfor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/kickfor_image"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/kickfor_image"
            android:paddingTop="3dip"
            android:text="余辛迪"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/kickfor_match_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/kickfor_image"
            android:layout_alignLeft="@id/kickfor_name"
            android:paddingBottom="5dip"
            android:text="踢否生涯比赛： 100场"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingTop="10dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info5" />

            <TextView
                android:id="@+id/kickfor_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" 进球\n 20 粒" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info6" />

            <TextView
                android:id="@+id/kickfor_assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" 助攻\n 20 次" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/kickfor_all"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selected_unselected"
            android:gravity="center"
            android:text="全部"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/kickfor_1"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selected_unselected"
            android:gravity="center"
            android:text="亚平宁之师"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/kickfor_2"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selected_unselected"
            android:gravity="center"
            android:text="XX"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/kickfor_3"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/selected_unselected"
            android:gravity="center"
            android:text="xxX"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>