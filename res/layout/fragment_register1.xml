<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/register_title1">"
	    <ImageView
	        android:id="@+id/register_title_back1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/register_text1"
		    android:layout_toRightOf="@id/register_title_back1"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/register_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:background="#ffffff"
        android:layout_below="@id/register_title1">
        <TextView
            android:id="@+id/shoujihaozhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="手机号"
            android:textColor="#333333"/>
        <EditText
            android:id="@+id/r_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shoujihaozhuce"
            android:layout_marginLeft="10dip"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入11位手机号"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/register_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:background="#ffffff"
        android:layout_below="@id/register_1">
        <TextView
            android:id="@+id/mimazhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="密码   "
            android:textColor="#333333"/>
        <EditText
            android:id="@+id/r_passwords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mimazhuce"
            android:layout_marginLeft="10dip"
            android:inputType="textPassword"
            android:maxLength="20"
            android:hint="6-20位，字母、数字或下划线"
            android:textColor="#9e9e9e"
            android:textSize="15sp"
            android:background="@null"/>
    </RelativeLayout>
    <TextView
	        android:id="@+id/r_next1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/register_2"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="下一步"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
</RelativeLayout>