<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/skills_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/skills_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/skills_detail_back"
            android:alpha="1"
            android:paddingBottom="12dip"
            android:paddingTop="12dip"
            android:text="我的技能"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_11"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/skills_detail_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="13"
            android:background="@drawable/skills_number"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/skills_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@id/skills_detail_count"
            android:layout_alignTop="@id/skills_detail_count"
            android:layout_toRightOf="@id/skills_detail_count"
            android:gravity="center_vertical"
            android:paddingRight="15dip"
            android:text="牛尾巴过人"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/skills_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/skills_detail_count"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/skills_detail_count"
            android:layout_marginRight="10dp"
            android:src="@drawable/skills_delete" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/skills_detail_count"
            android:layout_marginTop="10dp"
            android:background="#dedede" />

        <TextView
            android:id="@+id/skills_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:text="单脚在瞬间快速的分别用外脚背和内脚背触球，通过一次触球两次变向来迷惑防守队员，达到突破的目的。"
            android:textColor="#333333"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/skills_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:text="谁认可了余辛迪的足球技能"
        android:textColor="#333333"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/skills_detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" />

</LinearLayout>