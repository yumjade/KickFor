<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style"
		android:id="@+id/teamcreate_title5">
	    <ImageView
	        android:id="@+id/teamcreate_title_back5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/teamcreate_text5"
		    android:layout_toRightOf="@id/teamcreate_title_back5"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="注册球队"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="是初具规模，还是一只业余圈人见人怕\n的虎狼之师，确定球队人数"
        android:textSize="14sp"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:layout_marginBottom="20dip"/>
    <RelativeLayout
        android:id="@+id/team_create_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_4"
        android:padding="10dip">
        <TextView
	        android:id="@+id/tv_qiuduirenshu"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="球队人数"
	        android:textSize="15sp"
	        android:textColor="#333333"
	        android:gravity="center"/>
        <TextView
	        android:id="@+id/tv_ren"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="50dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="人"
	        android:textSize="15sp"
	        android:textColor="#333333"
	        android:gravity="center"/>
        <EditText
	        android:id="@+id/et_team_number"
	        android:inputType="number"
	        android:layout_toLeftOf="@id/tv_ren"
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:text=""
	        android:gravity="right"
	        android:textColor="#333333"
	        android:background="@null"
	        android:clickable="true"/>
    </RelativeLayout>
    <TextView
	        android:id="@+id/team_next5"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:textSize="16sp"
	        android:layout_marginTop="20dip"
	        android:background="@drawable/btn_style_selector"
	        android:text="完成"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        />
</LinearLayout>