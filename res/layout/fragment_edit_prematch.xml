<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa" >

    <RelativeLayout
        android:id="@+id/edit_pre_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/edit_pre_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/edit_pre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/edit_pre_back"
            android:text="比赛预告"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/bianjibisai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_pre_title"
        android:background="@drawable/rect_11"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="编辑比赛预告，去踢球!"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/duishouxingming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bianjibisai"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="对手姓名"
        android:textColor="#333333"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_pre_against_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/duishouxingming"
        android:layout_alignTop="@id/duishouxingming"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@id/duishouxingming"
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/edit_pre_team"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@+id/edit_pre_against_name"
        android:layout_below="@id/edit_pre_against_name"
        android:background="@drawable/rect_6" />

    <TextView
        android:id="@+id/bisaididian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/duishouxingming"
        android:layout_alignRight="@id/duishouxingming"
        android:layout_below="@id/edit_pre_team"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="比赛地点"
        android:textColor="#333333"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edit_pre_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bisaididian"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@id/edit_pre_against_name"
        android:layout_alignTop="@id/bisaididian"
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bisairiqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bisaididian"
        android:layout_alignRight="@id/bisaididian"
        android:layout_below="@id/bisaididian"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="比赛日期"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_pre_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bisairiqi"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@id/edit_pre_against_name"
        android:layout_alignTop="@id/bisairiqi"
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="date"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/bisaishijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bisairiqi"
        android:layout_alignRight="@id/bisairiqi"
        android:layout_below="@id/bisairiqi"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="比赛时间"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_pre_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bisaishijian"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@id/edit_pre_against_name"
        android:layout_alignTop="@id/bisaishijian"
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="time"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/match_character_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bisairiqi"
        android:layout_alignRight="@id/bisairiqi"
        android:layout_below="@id/bisaishijian"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="比赛性质"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/match_character_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/match_character_1"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@id/edit_pre_against_name"
        android:layout_alignTop="@id/match_character_1"
        
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/match_format_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bisairiqi"
        android:layout_alignRight="@id/bisairiqi"
        android:layout_below="@id/match_character_1"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:layout_marginTop="10dp"
        android:text="赛制"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/match_format_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/match_format_1"
        android:layout_alignLeft="@id/edit_pre_against_name"
        android:layout_alignRight="@id/edit_pre_against_name"
        android:layout_alignTop="@id/match_format_1"
        android:background="@drawable/rect_4"
        android:gravity="center_vertical"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_pre_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/match_format_1"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/btn_style_selector_2"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:paddingTop="10dip"
        android:text="取消发布"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_pre_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_pre_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/edit_pre_cancel"
        android:layout_marginRight="30dip"
        android:background="@drawable/btn_style_selector"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:text="确认发布"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/edit_pre_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_pre_cancel"
        android:layout_alignRight="@id/edit_pre_ensure"
        android:layout_below="@id/edit_pre_ensure"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_style_selector_2"
        android:gravity="center"
        android:text="删除预告"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>