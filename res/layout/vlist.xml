<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/list_photo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/team_message" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_photo"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/list_photo"
        android:gravity="center"
        android:text="齐济"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_name"
        android:text="加我吧"
        android:layout_marginTop="10dp"
        android:textColor="#9e9e9e"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_name"
        android:gravity="top"
        android:layout_marginRight="10dp"
        android:text="15:30"
        android:textColor="#9e9e9e"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_msg_number"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_alignBottom="@id/list_photo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:text="99+"
        android:textColor="#ffffff"
        android:textSize="8.5sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_style_selector"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:layout_marginRight="10dp"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:text="同意"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/list_disagree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/list_agree"
        android:background="@drawable/btn_style_selector_2"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip"
        android:text="拒绝"
        android:textColor="#ffffff"
        android:textSize="13sp" />
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_photo"
        android:layout_marginTop="10dp"
        android:background="#dedede"/>

</RelativeLayout>