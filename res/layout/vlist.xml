<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dip">
	<ImageView
	    android:id="@+id/list_photo"
	    android:layout_alignParentLeft="true"
	    android:layout_width="50dip"
	    android:layout_height="50dip"
	    android:src="@drawable/team_message"/>
	<TextView 
	    android:id="@+id/list_name" 
	    android:layout_toRightOf="@id/list_photo"
	    android:layout_alignTop="@id/list_photo"
	    android:layout_marginLeft="10dip"
	    android:layout_marginTop="3dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 	
		android:textSize="15sp" 
		android:textColor="#333333"
		android:gravity="center"
		android:text="齐济"/>
	<TextView 
	    android:id="@+id/list_message" 
	    android:layout_alignLeft="@id/list_name"
	    android:layout_below="@id/list_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginTop="5dp"
		android:textColor="#9e9e9e"	
		android:textSize="13sp" 
		android:gravity="center"
		android:text="加我吧"/>
	<TextView 
	    android:id="@+id/list_date" 
	    android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignTop="@id/list_photo"
		android:textSize="13sp"
		android:textColor="#9e9e9e"
		android:gravity="top"
		android:text="15:30"/>
	<TextView
	    android:id="@+id/list_msg_number"
	    android:layout_width="18dip"
	    android:layout_height="18dip"
	    android:layout_alignParentRight="true"
	    android:layout_marginBottom="10dip"
	    android:layout_alignBottom="@id/list_photo"
	    android:text="99+"
	    android:textColor="#ffffff"
	    android:textSize="8.5sp"
	    android:gravity="center"
	    android:textStyle="bold"
	    android:background="@drawable/circle_red"/>
	<TextView
	    android:id="@+id/list_agree"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@drawable/btn_style_selector"
	    android:text="同意"
	    android:paddingTop="5dip"
	    android:paddingBottom="5dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:textColor="#ffffff"
	    android:textSize="13sp"/>
	<TextView
	    android:id="@+id/list_disagree"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@id/list_agree"
	    android:layout_centerVertical="true"
	    android:background="@drawable/btn_style_selector_2"
	    android:paddingTop="5dip"
	    android:paddingBottom="5dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:text="拒绝"
	    android:textColor="#ffffff"
	    android:layout_marginRight="10dip"
	    android:textSize="13sp"/>
</RelativeLayout>