<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/manage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_style" >

        <ImageView
            android:id="@+id/manage_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_unselected_3"
            android:padding="15dip"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/manage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/manage_back"
            android:text="更衣室管理"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/manage_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:text="申请入队"
                android:textColor="#333333"
                android:textSize="14sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ebebeb" />

            <ListView
                android:id="@+id/joinin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:divider="#ebebeb"
                android:dividerHeight="0.5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/manage_type2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/joinin"
                    android:layout_weight="9"
                    android:background="#f5f5f5"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingTop="10dip"
                    android:text="授权或剔除队员"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/manage_add"
                    android:layout_width="0dip"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_14"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/changingroom_manage_new" />
            </LinearLayout>

            <ListView
                android:id="@+id/autority_or_kick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="#ffffff"
                android:divider="#dedede"
                android:dividerHeight="0.5dp" />

            <TextView
                android:id="@+id/manage_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/btn_style_selector"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:clickable="true"
                android:paddingTop="10dip"
                android:text="清空聊天记录"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/manage_no_bother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:clickable="true"
                android:background="@drawable/btn_style_selector_1"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="消息免打扰"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>