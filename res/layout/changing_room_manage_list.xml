<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#f0f0f0">
	<RelativeLayout
	    android:id="@+id/manage_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/title_style">
	    <ImageView
	        android:id="@+id/manage_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:padding="15dip"
	        android:src="@drawable/back"
	        android:background="@drawable/select_unselected_3"/>
	    <TextView 
		    android:id="@+id/manage_text"
		    android:layout_toRightOf="@id/manage_back"
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="更衣室管理"
		    android:textSize="15sp"
		    android:textColor="#ffffff"/>
	</RelativeLayout>
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#f0f0f0">
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="#f0f0f0">
			<TextView
			    android:id="@+id/manage_type1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="申请入队"
			    android:paddingLeft="10dip"
			    android:paddingTop="5dip"
			    android:paddingBottom="5dip"
			    android:textColor="#333333"
			    android:textSize="14sp"/>
		
			<ListView
			    android:id="@+id/joinin"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#ffffff"/>
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    <TextView
				    android:id="@+id/manage_type2"
				    android:layout_width="0dip"
				    android:layout_weight="5"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/joinin"
				    android:background="#f0f0f0"
				    android:text="授权或剔除队员"
				    android:paddingLeft="10dip"
				    android:paddingTop="5dip"
				    android:paddingBottom="5dip"
				    android:textColor="#333333"
				    android:textSize="14sp"/>
				<ImageView
				    android:id="@+id/manage_add"
				    android:layout_width="0dip"
				    android:layout_weight="1"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:src="@drawable/changingroom_manage"/>	
			</LinearLayout>
			<ListView
			    android:id="@+id/autority_or_kick"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#ffffff"
			    android:layout_marginBottom="10dip"/> 
			<TextView
			    android:id="@+id/manage_clean"
			    android:layout_marginLeft="5dip"
			    android:layout_marginRight="5dip"
			    android:layout_marginBottom="10dip"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/btn_style_selector"
			    android:paddingTop="10dip"
			    android:paddingBottom="10dip"
			    android:text="清空聊天记录"
			    android:gravity="center"
			    android:textColor="#ffffff"
			    android:textSize="15sp"/>
	        <TextView
			    android:id="@+id/manage_no_bother"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/btn_style_selector_1"
			    android:paddingTop="10dip"
			    android:paddingBottom="10dip"
			    android:gravity="center"
			    android:text="消息免打扰"
			    android:textColor="#333333"
			    android:textSize="15sp"
			    android:layout_marginLeft="5dip"
			    android:layout_marginRight="5dip"
			    android:layout_marginBottom="10dip"/>
	    </LinearLayout>
	</ScrollView>

</LinearLayout>